<Window x:Class="Cashlab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cashlab" 
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="500" 
        Width="800">
    <Window.DataContext>
        <local:ShopViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="1">
            
            <ListBox 
                ItemsSource="{Binding Cashes}" 
                Margin="10" 
                Height="300" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                BorderBrush="Transparent" 
                Background="Transparent" 
                BorderThickness="0">
                
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel 
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="5"
                            >
                            <StackPanel 
                            Orientation="Vertical" 
                            VerticalAlignment="Top" 
                            Margin="10" 
                            HorizontalAlignment="Center"
                            >

                                <TextBlock 
                                Text="{Binding StringFormat=Касса №{0}, Path =Id}" 
                                Margin="5" 
                                HorizontalAlignment="Center"/>

                                <TextBlock 
                                Text="{Binding StringFormat=Очередь: {0}, Path =Clients.Count}" 
                                Margin="5" 
                                HorizontalAlignment="Center"/>
                                
                                <Grid 
                                Width="100" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                Height="200"
                                 >

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Rectangle 
                                    Grid.Row="0" 
                                    Height="20" 
                                    Width="30" 
                                    Fill="Black" 
                                    RadiusX="5" 
                                    RadiusY="5" 
                                    StrokeThickness="1"/>

                                    <ListBox  
                                    Grid.Row="1" 
                                    ItemsSource="{Binding Clients}" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Top"
                                    ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                                    BorderBrush="Transparent" 
                                    Background="Transparent" 
                                    BorderThickness="0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Rectangle 
                                                Height="10"
                                                Width="10"
                                                RadiusX="1"
                                                RadiusY="1"
                                                Fill="{Binding Path = Color}"
                                                Margin="2" Stroke="Black"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <StackPanel 
                Orientation="Horizontal" 
                Margin="10">
                
                <Button 
                    Command="{Binding AddQueue}" 
                    Width="20" 
                    Height="20" 
                    Content="+"/>
                
            </StackPanel>
        </StackPanel>
            
    </Grid>
</Window>
